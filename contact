  <script src="assets/js/main.js"></script>

  <script>
    (function () {
      const form = document.getElementById('contactForm');
      const statusEl = document.getElementById('formStatus');

      // If you add a real endpoint (Formspree/Netlify/Getform), paste it here:
      // form.action = "https://formspree.io/f/xxxxabcd";

      function escapeVal(v) {
        return encodeURIComponent((v || '').toString().trim());
      }

      form.addEventListener('submit', function (e) {
        // Basic spam trap
        const honeypot = form.querySelector('input[name="website"]');
        if (honeypot && honeypot.value) {
          e.preventDefault();
          statusEl.textContent = "Thanks. We'll be in touch.";
          return;
        }

        // If no action is set, fall back to mailto
        if (!form.action) {
          e.preventDefault();

          const name = form.name.value;
          const email = form.email.value;
          const company = form.company.value;
          const role = form.role.value;
          const usecase = form.usecase.value;
          const message = form.message.value;
          const nextStep = (form.querySelector('input[name="next_step"]:checked') || {}).value || "Request a demo";

          const subject = `Qatalyst enquiry: ${usecase || 'Request a demo'}`;
          const body =
`Name: ${name}
Email: ${email}
Organisation: ${company}
Role: ${role}
Use case: ${usecase}
Preferred next step: ${nextStep}

Message:
${message}
`;

          const mailto = `mailto:siti@qatalyst-quantum.co.uk?subject=${escapeVal(subject)}&body=${escapeVal(body)}`;
          window.location.href = mailto;

          statusEl.textContent = "Opening your email client… If it does not open, email siti@qatalyst-quantum.co.uk.";
        } else {
          // If using a real endpoint, let the form submit normally.
          statusEl.textContent = "Sending…";
        }
      });
    })();
  </script>
